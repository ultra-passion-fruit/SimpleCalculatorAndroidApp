<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/mainlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/resultEdit"
            android:layout_width="fill_parent"
            android:layout_height="79dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="" />

        <LinearLayout
            android:id="@+id/buttonRow01"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn07"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:text="7"
                android:layout_weight="1"
                android:onClick="btn07Click"/>

            <Button
                android:id="@+id/btn08"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:text="8"
                android:layout_weight="1"
                android:onClick="btn08Click"/>

            <Button
                android:id="@+id/btn09"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:text="9"
                android:layout_weight="1"
                android:onClick="btn09Click"/>

            <Button
                android:id="@+id/btnAdd"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:text="+"
                android:layout_weight="1"
                android:onClick="btnAddClick"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/buttonRow02"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn04"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:text="4"
                android:layout_weight="1"
                android:onClick="btn04Click"/>

            <Button
                android:id="@+id/btn05"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:text="5"
                android:layout_weight="1"
                android:onClick="btn05Click"/>

            <Button
                android:id="@+id/btn06"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:text="6"
                android:layout_weight="1"
                android:onClick="btn06Click"/>

            <Button
                android:id="@+id/btnMinus"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:text="-"
                android:layout_weight="1"
                android:onClick="btnMinusClick"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/buttonRow03"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn01"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:text="1"
                android:layout_weight="1"
                android:onClick="btn01Click"/>

            <Button
                android:id="@+id/btn02"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:text="2"
                android:layout_weight="1"
                android:onClick="btn02Click"/>

            <Button
                android:id="@+id/btn03"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:text="3"
                android:layout_weight="1"
                android:onClick="btn03Click"/>

            <Button
                android:id="@+id/btnDivide"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:text="/"
                android:layout_weight="1"
                android:onClick="btnDivideClick"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/buttonRow04"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnClear"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:text="CE"
                android:layout_weight="1"
                android:onClick="btnClearClick"/>

            <Button
                android:id="@+id/btn00"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:text="0"
                android:layout_weight="1"
                android:onClick="btn00Click"/>

            <Button
                android:id="@+id/btnDot"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:text="."
                android:layout_weight="1"
                android:onClick="btnDotClick"/>

            <Button
                android:id="@+id/btnMultiply"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:text="X"
                android:layout_weight="1"
                android:onClick="btnMultiplyClick"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/buttonRow05"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnResult"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:text="="
                android:layout_weight="1"
                android:onClick="btnResultClick"/>
        </LinearLayout>





    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>